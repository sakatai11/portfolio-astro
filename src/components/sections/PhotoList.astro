---
import FadeIn from '@/components/ui/FadeIn.tsx'
import type { PhotosMain } from '@/types/index'

type Props = {
  photos: PhotosMain[]
}

const { photos } = Astro.props
---

<section class="mx-auto max-w-[1600px] px-4 pt-[160px] pb-0 md:px-[5.5rem]">
  <h2 class="mb-32 text-center font-sans text-3xl tracking-widest uppercase">
    PHOTOS
  </h2>

  <ul class="grid grid-cols-1 gap-[7.8vw] md:grid-cols-6">
    {
      photos.map(({ id, main, title }, index) => {
        return (
          <li class={`w-full ${index < 2 ? 'md:col-span-3' : 'md:col-span-2'}`}>
            <FadeIn client:visible delay={index * 0.2} opacityDuration={0.5}>
              <a href={`/photos/${id}`} class="group block overflow-hidden">
                <picture>
                  <source srcset={`${main.url}?fm=webp`} type="image/webp" />
                  <img
                    src={main.url}
                    alt={title}
                    width={main.width}
                    height={main.height}
                    class="aspect-[3/2] w-full object-cover transition-transform duration-700 ease-out group-hover:scale-105 group-hover:opacity-80"
                    loading="lazy"
                    decoding="async"
                  />
                </picture>
              </a>
            </FadeIn>
          </li>
        )
      })
    }
  </ul>

  <div class="mt-20 text-center">
    <a
      href="/photos"
      class="group relative inline-flex w-64 items-center justify-center border border-[var(--color-border)] px-6 py-4 transition-colors hover:bg-gray-50"
    >
      <span class="text-sm tracking-widest uppercase">View More</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="absolute right-6 h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
      </svg>
    </a>
  </div>
</section>
